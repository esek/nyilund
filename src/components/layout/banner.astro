---
import Button from '@/components/button.astro';
import Heading from '@/components/heading.astro';

export type Props = {
  title: string;
  button: string;
  href: string;
};

const { title, button, href } = Astro.props;
---

<section class="p-12 md:p-24 bg-white text-center space-y-4">
  <Heading larger={true}>
    {title}
  </Heading>
  <Button href={href} variant="secondary">
    {button}
  </Button>
</section>
