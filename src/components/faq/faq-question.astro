---
import Heading from '../heading.astro';

export type Props = {
  title: string;
  content: string;
};

const { title, content } = Astro.props;
---

<details class="text-left bg-white/10 rounded-sm text-white">
  <summary class="hover:opacity-80 cursor-pointer p-8">
    <Heading class="inline-block pl-2">
      {title}
    </Heading>
  </summary>
  <div set:html={content} class="px-8 pb-8 max-w-6xl" />
</details>

<style lang="scss">
  [data-expanding] {
    overflow: hidden;
    max-height: 0;
    transition: all 0.3s ease-in-out;
  }

  input:checked ~ [data-expanding] {
    max-height: 400px;
    @apply pb-8;
  }
</style>
