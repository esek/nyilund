---
export type Props = {
  href: string;
  class?: string;
};

const { href, class: className } = Astro.props;
const target = href.startsWith('http') ? '_blank' : null;
const rel = target === '_blank' ? 'noreferrer' : null;
---

<a href={href} class:list={[className]} target={target} rel={rel}>
  <slot />
</a>
